{
  "extends": "../../../tsconfig.base.json",

  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/.tsbuildinfo",

    "declaration": true,
    "declarationMap": true,

    "composite": true,

    "module": "esnext",
    "moduleResolution": "bundler"
  },

  "include": ["src/**/*.ts"],

  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
