{
  "name": "@enterprise/ui",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@dashboard/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "apps/packages/ui/dist",
          "main": "apps/packages/ui/src/index.ts",
          "tsConfig": "apps/packages/ui/tsconfig.lib.json",
          "format": [
            "esm"
          ],
          "declarationRootDir": "apps/packages/ui/src"
        }
      }
    }
  },
  "dependencies": {
    "class-variance-authority": "*",
    "clsx": "*"
  }
}
