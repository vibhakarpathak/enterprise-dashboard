{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",

    "composite": true,

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,

    "module": "esnext",
    "moduleResolution": "bundler"
  },
  "references": [
    {
      "path": "../tokens/tsconfig.lib.json"
    }
  ],
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["**/*.stories.*", "**/*.spec.*", "**/*.test.*"]
}
